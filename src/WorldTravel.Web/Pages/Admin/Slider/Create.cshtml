@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WorldTravel.Web.Pages.Admin.Slider.CreateModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@{
    Layout = null;
}

<form method="post" enctype="multipart/form-data" asp-page="/Admin/Slider/Create">
    <abp-modal size="Large">
        <abp-modal-header title="@L["NewSlider"]"></abp-modal-header>
     <abp-modal-body>
            <abp-input asp-for="SliderInfo.MainImage" label="@L["Image"]" accept="image/png, image/gif, image/jpeg" />

            <abp-input asp-for="SliderInfo.Title" label="@L["Title"]" />
           
            <abp-input asp-for="SliderInfo.Description" label="@L["Description"]" />
            <abp-input asp-for="SliderInfo.Rank" label="@L["Rank"]" />
            <abp-input asp-for="SliderInfo.IsSeenHomePage" label="@L["IsSeenHomePage"]" />
            <hr />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>