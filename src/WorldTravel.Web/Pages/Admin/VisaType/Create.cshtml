@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WorldTravel.Web.Pages.Admin.VisaType.CreateModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@{
    Layout = null;
}

<form asp-page="/Admin/VisaType/Create" method="post" enctype="multipart/form-data">
    <abp-modal size="Large">
        <abp-modal-header title="@L["NewVisaType"]"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="VisaType.Title" label="@L["Title"]" />
            <abp-input asp-for="VisaType.MainImage" label="@L["Image"]" accept="image/png, image/gif, image/jpeg" />
            <abp-select asp-for="VisaType.CountryId" label="@L["Country"]">
                <option disabled selected>@L["Choose"]</option>
            </abp-select>
            <abp-input asp-for="VisaType.ShortDescription" label="@L["ShortDescription"]" />
            <abp-input asp-for="VisaType.Description" label="@L["Description"]" class="ckeditor" />
            <abp-input asp-for="VisaType.ExtraDescription" label="@L["ExtraDescription"]" class="ckeditor" />
            <abp-input asp-for="VisaType.VisaFee" label="@L["VisaFee"]" />
            <abp-input asp-for="VisaType.VisaDuration" label="@L["VisaDuration"]" />
            <abp-input asp-for="VisaType.IsSeenHomePage" label="@L["IsSeenHomePage"]" />
            <hr />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
<script>
      $(document).ready(function () {
          $('.ckeditor').each(function () {
              CKEDITOR.replace($(this).attr("id"));
          });
      });   
</script>