@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WorldTravel.Web.Pages.Admin.Blog.EditModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@{
    Layout = null;
}

<form method="post" enctype="multipart/form-data" asp-page="/Admin/Blog/Edit">
    <abp-modal size="Large">
        <abp-modal-header title="@L["NewBlog"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" type="hidden" />
            <abp-input asp-for="BlogInfo.MainImage" label="@L["Image"]" accept="image/png, image/gif, image/jpeg" />
            <abp-input asp-for="BlogInfo.Title" label="@L["Title"]" />
            <abp-input asp-for="BlogInfo.SeoTitle" label="@L["SeoTitle"]" />
            <abp-input asp-for="BlogInfo.SeoDescription" label="@L["SeoDescription"]" />
            <abp-input asp-for="BlogInfo.Description" label="@L["Description"]" class="ckeditor" />
            <abp-input asp-for="BlogInfo.Rank" label="@L["Rank"]" />
            <abp-input asp-for="BlogInfo.IsSeenHomePage" label="@L["IsSeenHomePage"]" />
            <hr />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>


<script>

    $(document).ready(function () {
        $('.ckeditor').each(function () {
            CKEDITOR.replace($(this).attr("id"));
        });
    });
</script>