@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WorldTravel.Web.Pages.Admin.Blog.CreateModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@{
    Layout = null;
}

<form asp-page="/Admin/Blog/Create" method="post" enctype="multipart/form-data">
    <abp-modal size="Large">
        <abp-modal-header title="@L["NewPost"]"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Blog.MainImage" label="@L["Image"]" accept="image/png, image/gif, image/jpeg" />
            <abp-input asp-for="Blog.Title" label="@L["Title"]" />
            <abp-input asp-for="Blog.SeoTitle" label="@L["SeoTitle"]" />
            <abp-input asp-for="Blog.SeoDescription" label="@L["SeoDescription"]" />
            <abp-input asp-for="Blog.Description" label="@L["Description"]" class="ckeditor" />       
            <abp-input asp-for="Blog.Rank" label="@L["Rank"]" />
            <abp-input asp-for="Blog.IsSeenHomePage" label="@L["IsSeenHomePage"]" />
            <hr />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
<script>
      $(document).ready(function () {
          $('.ckeditor').each(function () {
              CKEDITOR.replace($(this).attr("id"));
          });
      });   
</script>