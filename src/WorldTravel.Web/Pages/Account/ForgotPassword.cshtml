@page
@model WorldTravel.Web.Pages.Account.ForgotPasswordModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@{
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 main-col">
            <div class="mb-4">
                <form method="post" class="contact-form cont-content" style="box-shadow: -1px 0px 20px 0 #ededed;">
                    @Html.AntiForgeryToken()
                    @(await Component.InvokeAsync<Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic.Themes.Basic.Components.PageAlerts.PageAlertsViewComponent>())
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <h3 class="mb-0">@L["ForgotYourPassword"]</h3>
                                <br />
                                <p class="text-muted">@L["PasswordChangeLinkWillSent"]</p>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input asp-for="Email" autofocus class="form-control" placeholder="Email">
                                <div class="form-control-feedback">
                                    <i class="icon-mail5 text-muted"></i>
                                </div>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group" style="text-align:center">
                                <abp-button text="@L["Send"]" style="background: #ff7800; padding: 15px 20px;
                                        border-radius: 5px; font-weight: 700; box-shadow: 0px 1px 20px 0 #1594d069;" type="submit" button-type="Success" class="btn mb-3" />
                            </div>
                            <div style="text-align:right">
                                <a href="/Account/Login">@L["LoginInstead"]</a>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
